# OpenAI Configuration (Required)
OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
MODEL_NAME=gpt-4o

# Application Configuration
DEBUG=false
API_TITLE=Code Summarizer API
API_VERSION=1.0.0

# Server Configuration
HOST=127.0.0.1
PORT=8000
CONTAINER_MODE=false

# Docker Configuration
API_HOST=127.0.0.1
API_PORT=8000
FRONTEND_PORT=80
FRONTEND_URL=http://localhost

# Security Configuration
CORS_ORIGINS=http://localhost,http://127.0.0.1,http://localhost:8080,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
UPLOAD_RATE_LIMIT_REQUESTS_PER_MINUTE=10
UPLOAD_RATE_LIMIT_BURST=5

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self';

# JWT Configuration (for future use)
JWT_SECRET_KEY=your-secret-key-change-in-production-make-it-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API Key Security
API_KEY_HEADER_NAME=X-API-Key
REQUIRE_API_KEY=false

# File Processing Configuration
MAX_FILE_SIZE_MB=50
MAX_FILES_PER_REQUEST=100

# Performance Settings
WORKERS=1
REQUEST_TIMEOUT=300

# Production Security Settings (uncomment for production)
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
# JWT_SECRET_KEY=your-very-secure-secret-key-for-production
# REQUIRE_API_KEY=true
# SECURITY_HEADERS_ENABLED=true